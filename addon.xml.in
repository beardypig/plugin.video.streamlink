<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="@APPNAME@" name="streamlink" version="@VERSION@" provider-name="beardypig">
  <requires>
    <import addon="xbmc.python" version="2.19.0"/>
    <import addon="script.module.requests" version="2.9.1"/>
    <import addon="script.module.futures" version="2.2.0"/>
    <import addon="script.module.singledispatch" version="3.4.0.3"/>
    <import addon="script.module.backports.shutil_which" version="3.5.1"/>
    <import addon="script.module.ordereddict" version="1.1"/>
    <import addon="script.module.pycountry" version="17.1.8"/>
    <import addon="script.module.streamlink.crypto" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py" />
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.python.module" library="lib/" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <summary>streamlink wrapper</summary>
    <description>Plays videos from sites that are supported by streamlink</description>
    <platform>all</platform>
    <license>Simplified BSD</license>
    <source>https://github.com/streamlink/streamlink.git</source>
    <website>http://streamlink.github.io</website>
  </extension>
</addon>
